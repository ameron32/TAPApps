<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:materialviewpager="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

  <com.github.florent37.materialviewpager.MaterialViewPager
      android:id="@+id/materialViewPager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      materialviewpager:viewpager_logo="@layout/trial_header_logo"
      materialviewpager:viewpager_logoMarginTop="100dp"
      materialviewpager:viewpager_color="@color/colorPrimary"
      materialviewpager:viewpager_headerHeight="200dp"
      materialviewpager:viewpager_headerAlpha="1.0"
      materialviewpager:viewpager_hideLogoWithFade="false"
      materialviewpager:viewpager_hideToolbarAndTitle="true"
      materialviewpager:viewpager_enableToolbarElevation="true" />


</LinearLayout>
