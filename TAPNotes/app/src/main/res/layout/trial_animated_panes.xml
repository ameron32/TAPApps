<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:shadow="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


  <app.mosn.zdepthshadowlayout.ZDepthShadowLayout
      android:id="@+id/b_pane"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      shadow:z_depth="z_depth5"
      shadow:z_depth_padding="z_depth5"
      shadow:z_depth_shape="rect">

    <TextView
        android:id="@+id/b_pane_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/CadetBlue"
        android:gravity="center"
        android:text="B"
        android:textSize="128sp"/>
  </app.mosn.zdepthshadowlayout.ZDepthShadowLayout>

  <app.mosn.zdepthshadowlayout.ZDepthShadowLayout
      android:id="@+id/a_pane"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      shadow:z_depth="z_depth5"
      shadow:z_depth_padding="z_depth5"
      shadow:z_depth_shape="rect">

    <TextView
        android:id="@+id/a_pane_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ClassicBlue_Primary"
        android:gravity="center"
        android:text="A"
        android:textSize="128sp"/>
  </app.mosn.zdepthshadowlayout.ZDepthShadowLayout>

</RelativeLayout>
