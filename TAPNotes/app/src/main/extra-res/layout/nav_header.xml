<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="160dp"
    android:background="@color/transparent_material_drawer_background">

  <ImageView
      android:id="@+id/imageview_character_image_full_size"
      android:layout_width="320dp"
      android:layout_height="160dp"/>

  <ImageButton
      android:id="@+id/imagebutton_navigation_drawer_up_arrow"
      style="?android:attr/borderlessButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignBottom="@+id/imagebutton_navigation_drawer_logout"
      android:layout_alignTop="@+id/imagebutton_navigation_drawer_logout"
      android:gravity="center"
      android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"/>

  <ImageButton
      android:id="@+id/imagebutton_navigation_drawer_logout"
      style="?android:attr/borderlessButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/abc_action_bar_default_height_material"
      android:layout_alignParentRight="true"
      android:gravity="center"
      android:src="@drawable/ic_logout"/>

  <LinearLayout
      android:id="@+id/layout_title_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/imageview_character_image_full_size"
      android:layout_alignParentBottom="true"
      android:layout_alignRight="@+id/imageview_character_image_full_size"
      android:background="@color/material_drawer_background_overlay"
      android:gravity="center"
      android:orientation="vertical">

    <TextView
        android:id="@+id/textview_nav_maintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/textview_nav_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>
</RelativeLayout>

